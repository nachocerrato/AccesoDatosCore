@model List<Plantilla>
<h1>Plantilla por turno</h1>

<form method="post">
    <label>Introduzca un turno (m/t/n)</label>
    <input type="text" name="turno"
           class="form-control" required />
    <button class="btn btn-info">
        Buscar
    </button>
</form>

@if (Model != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Funcion</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Plantilla pla in Model)
            {
                <tr>
                    <td>@pla.Apellido</td>
                    <td>@pla.Funcion</td>
                    <td>@pla.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}