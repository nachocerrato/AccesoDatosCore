@model Empleado

@{ 
    List<Empleado> empleados = ViewBag.Empleados as List<Empleado>;
}

<h1>Apellidos</h1>
<form method="post">
    <label>Seleccione un empleado</label>
    <select name="idempleado" class="form-control">
        @foreach (Empleado emp in empleados)
        {
            <option value="@emp.IdEmpleado">@emp.Apellido</option>
        }
    </select>
    <button class="btn btn-success">
        Mostrar empleados
    </button>
</form>

@if (Model != null)
{

                    <h3>@Model.Apellido</h3>
                    <h3>@Model.Oficio</h3>

}