@model List<Empleado>
<h1>Buscando empleados Salario</h1>

<form method="post">
    <label>Introduzca salario: </label>
    <input type="number" name="salario"
           class="form-control" required />
    <button class="btn btn-info">
        Buscar
    </button>
</form>

@if (Model != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}


